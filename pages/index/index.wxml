<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view>
    <swiper autoplay="true" interval="3000" duration="500" indicator-dots="true" circular="true">
      <block wx:for="{{imgUrls}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}" class="swiper-image"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="gn">
    <view class="vc">
      <van-row>
        <van-col span="3">  头像</van-col>
        <van-col span="16">Hey,来跟幸运打个招呼</van-col>
      </van-row>
    </view>
    <van-row>
      <van-col span="8">
        <van-image width="100" height="100" src="/assets/index_image/到店取.png" class="pic" />
      </van-col>
      <van-col span="8">
        <van-image width="100" height="100" src="/assets/index_image/幸运送.png" class="pic" />
      </van-col>
      <van-col span="8">
        <van-image width="100" height="100" src="/assets/index_image/电商够.png" class="pic" />
      </van-col>
    </van-row>
    <van-row>
      <van-col span="6"><van-icon name="good-job-o" /></van-col>
      <van-col span="6"><van-icon name="good-job-o" /></van-col>
      <van-col span="6"><van-icon name="good-job-o" /></van-col>
      <van-col span="6"><van-icon name="good-job-o" /></van-col>
    </van-row>
  </view>
  <!-- 底部导航栏 -->
  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item name="index" icon="home-o">首页</van-tabbar-item>
    <van-tabbar-item name="menu" icon="cart-o">菜单</van-tabbar-item>
    <van-tabbar-item name="my" icon="contact-o">我的</van-tabbar-item>
  </van-tabbar>
</scroll-view>